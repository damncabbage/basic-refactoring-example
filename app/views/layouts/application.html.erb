<!DOCTYPE html>
<html>
<head>
  <title>ProductCatalogue</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  <div style="background:#9f9; padding:20px; font-size:1.4em;">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:warning] %>
  <div style="background:#f99; padding:20px; font-size:1.4em;">
    <%= flash[:warning] %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
